{
	"name": "hapi-universal-redux",
	"description": "Isomorphic starterkit with server-side React rendering.",
	"version": "1.0.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Luandro/hapi-universal-redux.git"
	},
	"homepage": "https://github.com/Luandro/hapi-universal-redux",
	"keywords": [
		"react",
		"react-router",
		"isomorphic",
		"starter",
		"boilerplate",
		"template",
		"webpack",
		"hapi",
		"redux",
		"redux-dev-tools"
	],
	"main": "dist/server.js",
	"scripts": {
		"start": "node node_modules/forever/bin/forever --minUptime 1000 --spinSleepTime 1000 -c \"node --harmony\" ./dist/server.js",
		"production": "NODE_ENV=production npm run build && NODE_ENV=production npm run start",
		"build-server": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.server.js",
		"build-client": "node node_modules/webpack/bin/webpack --colors --display-error-details --config configs/webpack.client.js",
		"build": "node node_modules/concurrently/src/main \"npm run build-server\" \"npm run build-client\"",
		"watch-server": "node node_modules/webpack/bin/webpack --watch --verbose --colors --display-error-details --config configs/webpack.server-watch.js",
		"watch-server-start": "node node_modules/just-wait --pattern \"dist/*.js\" && npm run start",
		"watch-client": "node node_modules/webpack-dev-server/bin/webpack-dev-server --config configs/webpack.client-watch.js",
		"dev": "node node_modules/concurrently/src/main --kill-others \"npm run watch-server-start\" \"npm run watch-server\" \"npm run watch-client\"",
		"postinstall": "webpack -p --config configs/webpack.client.js"
	},
	"dependencies": {
		"babel": "6.5.2",
		"babel-core": "6.5.2",
		"babel-loader": "6.2.3",
		"babel-polyfill": "6.5.0",
		"babel-preset-es2015": "6.5.0",
		"babel-preset-react": "6.5.0",
		"babel-preset-react-hmre": "1.1.0",
		"babel-preset-stage-0": "6.5.0",
		"forever": "0.15.1",
		"h2o2": "^5.0.0",
		"hapi": "^13.0.0",
		"history": "^2.0.0",
		"inert": "^3.2.0",
		"isomorphic-fetch": "^2.2.1",
		"piping": "0.3.0",
		"radium": "^0.16.6",
		"react": "^0.14.7",
		"react-dom": "^0.14.7",
		"react-redux": "^4.4.0",
		"react-router": "^2.0.0",
		"react-router-redux": "^4.0.0",
		"react-tap-event-plugin": "0.2.2",
		"redux": "^3.3.1",
		"redux-devtools": "^3.1.1",
		"redux-devtools-dock-monitor": "^1.1.0",
		"redux-devtools-log-monitor": "^1.0.4",
		"redux-thunk": "^1.0.3",
		"webpack": "^1.12.14"
	},
	"devDependencies": {
		"concurrently": "^2.0.0",
		"eslint": "^2.2.0",
		"eslint-config-airbnb": "^6.0.2",
		"eslint-plugin-react": "^4.1.0",
		"json-loader": "^0.5.4",
		"just-wait": "1.0.5",
		"webpack-dev-server": "^1.14.1"
	},
	"engines": {
		"node": ">=4.0.0"
	}
}
